@import "nib";
@import "../bower/colors/stylus/colors";
@import "fontello/css/fontello.css";
@import "hexo-highlight.css";
// @import "hemisu-light.css";
// @import "mdo-light.css";

$containerWidth = 650px;
$iconWidth = 30px;
$gutter = 28px;
$mainTextColor = #5a5a5a;

// global-reset();
html {
  font-size: 14px;
}
@media (min-width: 40em) {
  html {
    font-size: 18px;
  }
}
@media (max-width: 28em) {
  .power {
    display: none;
  }
  .copy {
    float: left;
  }
}
body {
  font: 1rem/1.7 "Lucida Grande","Lucida Sans Unicode",Helvetica,Arial,Verdana,sans-serif;
  margin: 0;
  color: $mainTextColor;
}

h1 {
  font-size: 1.8em;
}
h2 {
  font-size: 1.5em;
}
a {
  text-decoration: none;
}
img {
  max-width: 100%;
}
blockquote {
  padding-left: 1em;
  margin-left: 1em;
  border-left: 2px solid silver;
  color: lighten($mainTextColor, 30%);
  font-size: .9em;
}

.f-left {
  float: left;
}
.f-right {
  float: right;
}

.header,
.footer {
  a {
    color: black;
    &:hover {
      color: blue;
    }
  }
}

.container {
  max-width: $containerWidth;
  margin: 0 auto;
}

.header {
  position: relative;
  border-bottom: 1px solid black;
  margin-top: $gutter;
}
.icon-rss {
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: - ($iconWidth / 2);
  font-size: 1.5em;
  transition: linear 0.25s;
  &:hover {
    transform: rotate(-45deg) translate(-.5em, -.5em);
  }
}
.avatar {
  display: inline-block;
  line-height: 0;
  vertical-align: bottom;
}
.avatar:hover {
  -webkit-animation-duration: 1s;
  animation-duration: 1s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
  // .bounce
  -webkit-animation-name: bounce;
  animation-name: bounce;
}
@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    -webkit-transform: translateY(0);
    -ms-transform: translateY(0);
    transform: translateY(0);
  }

  40% {
    -webkit-transform: translateY(-30px);
    -ms-transform: translateY(-30px);
    transform: translateY(-30px);
  }

  60% {
    -webkit-transform: translateY(-15px);
    -ms-transform: translateY(-15px);
    transform: translateY(-15px);
  }
}

.main {
  min-height: 600px;
  margin: $gutter * 2 1em;
}
.section-list {
  font-size: 16px;
  h1 {
    margin-top: 1.2em;
  }
  ul {
    padding-left: 0;
  }
  li {
    list-style: none;
    margin-bottom: 1em;
  }
}
.posts time {
  float: right;
}
.meta {
  color: gray;
  time {
    margin-right: .5em;
  }
}
.tag-link {
  font-size: 0.8em;
  &:before {
    content: '#'
  }
}

.icon {
  &:hover:before {
    transition: 500ms;
    transform: rotate(360deg);
  }
}

.footer {
  padding-top: 10px;
  margin: 0 1em;
  margin-bottom: $gutter;
  text-align: center;
  &:before {
    display: block;
    content: 'â™ ';
  }
}
