@keyframes roll-1 {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
    left: 3 * ($iconWidth + 2);
  }
}
@keyframes roll-2 {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
    left: 4 * ($iconWidth + 2);
  }
}
@keyframes roll-3 {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
    left: 5 * ($iconWidth + 2);
  }
}
@keyframes roll-4 {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
    left: 6 * ($iconWidth + 2);
  }
}

.footer {
  padding-top: 10px;
  margin-bottom: $gutter;
  border-top: 1px solid gray;
  text-align: center;
}
